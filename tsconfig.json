{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "skipLibCheck": true,
    "stripInternal": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@components/*": ["./packages/*/src"]
    }
  },
  "exclude": ["node_modules", "packages/**/dist/**"]
}
